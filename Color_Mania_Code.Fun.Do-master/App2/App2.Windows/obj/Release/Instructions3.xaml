<Page
    x:Class="App2.Instructions3"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Image x:Name="background" Source="Assets/background1.jpg" HorizontalAlignment="Left" Height="758" VerticalAlignment="Top" Width="1346" Margin="10,10,0,0"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Margin="87,62,0,0" TextWrapping="Wrap" Text="Controls" VerticalAlignment="Top" Height="95" Width="260" Background="{x:Null}" BorderBrush="{x:Null}" IsReadOnly="True" FontSize="66.667" FontFamily="Myriad Pro" Foreground="#FF59C5BB" BorderThickness="0" SelectionHighlightColor="{x:Null}">
            <TextBox.Projection>
                <PlaneProjection RotationX="-4.959" RotationY="-31.502" RotationZ="5.07"/>
            </TextBox.Projection>
        </TextBox>
        <Image x:ConnectionId='1' x:Name="backward" Source="Assets/arrow_reverse.png" HorizontalAlignment="Left" Height="78" Margin="97,640,0,0" VerticalAlignment="Top" Width="100"                           />
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="269,345,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="46" Width="868" FontSize="29.333" FontFamily="Adobe Gothic Std B" SelectionHighlightColor="#FF4617B4" Text="Swap two containers by clicking on the containers to be swapped."/>
        <Image x:ConnectionId='2' x:Name="forward" Source="Assets/arrow.png" HorizontalAlignment="Left" Height="78" Margin="1202,640,0,0" VerticalAlignment="Top" Width="100"                           />
        <TextBlock x:Name="textBlock1" HorizontalAlignment="Left" Margin="953,584,0,0" TextWrapping="Wrap" Text="Proceed to Play" VerticalAlignment="Top" Height="51" Width="349" FontSize="48"/>

    </Grid>
</Page>

